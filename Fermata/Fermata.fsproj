<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0;net7.0;net8.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Fermata</PackageId>
    <Version>0.7.0</Version>
    <Authors>taidalog</Authors>
    <Company />
    <Description>An F# helper library for working with values of basic types in F#. Compatible with Fable.</Description>
    <PackageProjectUrl>https://github.com/taidalog/Fermata</PackageProjectUrl>
    <PackageTags>F#; FSharp; fable; miscellaneous; helper; library; functional; programming</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Copyright>Copyright (c) 2022-2023 taidalog</Copyright>
    <RepositoryUrl>https://github.com/taidalog/Fermata.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Validators.fsi" />
    <Compile Include="Validators.fs" />
    <Compile Include="Array.fsi" />
    <Compile Include="Array.fs" />
    <Compile Include="List.fsi" />
    <Compile Include="List.fs" />
    <Compile Include="Seq.fsi" />
    <Compile Include="Seq.fs" />
    <Compile Include="Bool.fsi" />
    <Compile Include="Bool.fs" />
    <Compile Include="Bound.fsi" />
    <Compile Include="Bound.fs" />
    <Compile Include="Int32.fsi" />
    <Compile Include="Int32.fs" />
    <Compile Include="Regex.fsi" />
    <Compile Include="Regex.fs" />
    <Compile Include="Result.fsi" />
    <Compile Include="Result.fs" />
    <Compile Include="String.fsi" />
    <Compile Include="String.fs" />
    <Compile Include="Tuple.fsi" />
    <Compile Include="Tuple.fs" />
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="6.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="*.fsproj; *.fs; *.fsi; *.js" PackagePath="fable\" />
  </ItemGroup>

</Project>
